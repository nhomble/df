# Ghostty configuration
# Replaces tmux with native splits/tabs using similar keybindings

# ----- Theme -----
theme = TokyoNight Storm

# ----- Font -----
font-family = JetBrains Mono
font-size = 14
font-feature = calt
font-feature = liga

# ----- Cursor -----
cursor-style = bar
cursor-style-blink = false

# ----- Clipboard -----
copy-on-select = true
clipboard-paste-protection = true

# ----- Shell -----
shell-integration = detect

# ----- Window / macOS -----
window-padding-x = 4
window-padding-y = 4
window-save-state = always
macos-titlebar-style = tabs
macos-option-as-alt = true
confirm-close-surface = false

# ----- Misc -----
mouse-hide-while-typing = true
scrollback-limit = 10000

# ----- Keybindings -----
# Using ctrl+b as prefix (tmux-style key sequences)
#
# Splits (tmux: prefix + %/")
keybind = ctrl+b>shift+five=new_split:right
keybind = ctrl+b>shift+quote=new_split:down

# Navigate splits (tmux: prefix + arrow)
keybind = ctrl+b>left=goto_split:left
keybind = ctrl+b>right=goto_split:right
keybind = ctrl+b>up=goto_split:top
keybind = ctrl+b>down=goto_split:bottom

# Navigate splits with vim keys (tmux: prefix + h/j/k/l)
keybind = ctrl+b>h=goto_split:left
keybind = ctrl+b>j=goto_split:bottom
keybind = ctrl+b>k=goto_split:top
keybind = ctrl+b>l=goto_split:right

# Zoom split (tmux: prefix + z)
keybind = ctrl+b>z=toggle_split_zoom

# Resize splits
keybind = ctrl+b>shift+left=resize_split:left,40
keybind = ctrl+b>shift+right=resize_split:right,40
keybind = ctrl+b>shift+up=resize_split:up,40
keybind = ctrl+b>shift+down=resize_split:down,40
keybind = ctrl+b>shift+equal=equalize_splits

# Close pane (tmux: prefix + x)
keybind = ctrl+b>x=close_surface

# Tabs (tmux: prefix + c/n/p)
keybind = ctrl+b>c=new_tab
keybind = ctrl+b>n=next_tab
keybind = ctrl+b>p=previous_tab

# Go to tab by number (tmux: prefix + 0-9)
keybind = ctrl+b>one=goto_tab:1
keybind = ctrl+b>two=goto_tab:2
keybind = ctrl+b>three=goto_tab:3
keybind = ctrl+b>four=goto_tab:4
keybind = ctrl+b>five=goto_tab:5
keybind = ctrl+b>six=goto_tab:6
keybind = ctrl+b>seven=goto_tab:7
keybind = ctrl+b>eight=goto_tab:8
keybind = ctrl+b>nine=goto_tab:9

# Move tabs
keybind = ctrl+b>shift+n=move_tab:1
keybind = ctrl+b>shift+p=move_tab:-1

# Last tab (tmux: prefix + l)
keybind = ctrl+b>semicolon=last_tab

# New window
keybind = ctrl+b>shift+c=new_window

# Fullscreen
keybind = ctrl+b>f=toggle_fullscreen
